.side-bar
  .header
    %script{:src => "./message.js"}
    .side-heder__box
      %p.side-heder__box__user-name
        = current_user.name
      %ul.side-heder__box__menu
        %li.side-heder__box__menu__edit-user
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'side-icon'
        %li.side-heder__box__menu__new-group
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'side-icon'
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message
