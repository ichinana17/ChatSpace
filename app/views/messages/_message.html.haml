.message
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.to_s(:datetime)
  - if message.content.present?
    %p.message__text
      = message.content
    = image_tag message.image.url, class: 'lower-message__image', :size =>'200x109' if message.image.present?
